@page
@model LearnLink.WebApi.Pages.LocalRoles.GetAtCourseModel
@{
    ViewData["Title"] = "Get role by user id at course";
}

<div class="breadcrumb">
    <h2 class="breadcrumb__item" onclick="redirect('LocalRoles/LocalRolesActionsPage')">
        Local-Roles
    </h2>
    <h2 class="breadcrumb__item" onclick="redirect('LocalRoles/GetAtCourse')">
        Get-At-Course
    </h2>
</div>

<form class="form" method="get">
    <div class="form-input">
        <p class="form-input__label">User Id</p>
        <input type="number" name="userId" placeholder="User Id..." min="0" class="input" />
    </div>

    <div class="form-input">
        <p class="form-input__label">Course Id</p>
        <input type="number" name="courseId" placeholder="Course Id..." min="0" class="input" />
    </div>

    <div class="form__actions">
        <button class="primary-button">Get</button>
    </div>
</form>

@{
    if (Model.QueryResult != null)
    {
        string className = Model.QueryResult.Success ? "green-text" : "red-text";
        <div class="response-container" id="register-response">
            <h3>Response:</h3>
            <p>Success: <span class="@className">@Model.QueryResult.Success.ToString()</span></p>
            <p>Code: @Model.QueryResult.StatusCode.ToString()</p>
            <p>Message: @Model.QueryResult.Message</p>
        </div>
    }
}

@if (Model.FoundLocalRole != null)
{
    <div class="data-view">
        <h3>View data</h3>
        <div class="result-value">
            <p>Id: <span class="white-selection">@Model.FoundLocalRole.Id</span></p>
            <p>Name: <span class="white-selection">@Model.FoundLocalRole.Name</span></p>
            <p>Sign: <span class="white-selection">@Model.FoundLocalRole.Sign</span></p>
            <p>ViewAccess: <span class="white-selection">@Model.FoundLocalRole.ViewAccess</span></p>
            <p>ManageAccess: <span class="white-selection">@Model.FoundLocalRole.ManageInternalAccess</span></p>
            <p>EditAccess: <span class="white-selection">@Model.FoundLocalRole.EditAccess</span></p>
            <p>RemoveAccess: <span class="white-selection">@Model.FoundLocalRole.RemoveAccess</span></p>
            <p>InviteAccess: <span class="white-selection">@Model.FoundLocalRole.InviteAccess</span></p>
            <p>KickAccess: <span class="white-selection">@Model.FoundLocalRole.KickAccess</span></p>
        </div>
    </div>
}
