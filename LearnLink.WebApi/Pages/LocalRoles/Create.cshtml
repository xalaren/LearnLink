@page
@model LearnLink.WebApi.Pages.LocalRoles.CreateModel
@{
    ViewData["Title"] = "Create local role";
}

<div class="breadcrumb">
    <h2 class="breadcrumb__item" onclick="redirect('LocalRoles/LocalRolesActionsPage')">
        Local-Roles
    </h2>
    <h2 class="breadcrumb__item" onclick="redirect('LocalRoles/Create')">
        Create
    </h2>
</div>

<form class="form width-400" method="post">
    <div class="form-input">
        <p class="form-input__label">Local Role Sign</p>
        <input type="text" name="localRoleSign" placeholder="Role Sign..." class="input" />
    </div>

    <div class="form-input">
        <p class="form-input__label">Local Role Name</p>
        <input type="text" name="localRoleName" placeholder="Role Name..." class="input" />
    </div>

    <p>Permissions: </p>

    <div class="line-container">
        <input type="checkbox" class="checkbox" id="viewAccess" name="viewAccess" />
        <label for="viewAccess">View Access</label>
    </div>

    <div class="line-container">
        <input type="checkbox" class="checkbox" id="manageAccess" name="manageAccess" />
        <label for="manageAccess">Manage Access</label>
    </div>

    <div class="line-container">
        <input type="checkbox" class="checkbox" id="editAccess" name="editAccess" />
        <label for="editAccess">Edit Access</label>
    </div>

    <div class="line-container">
        <input type="checkbox" class="checkbox" id="removeAccess" name="removeAccess" />
        <label for="removeAccess">Remove Access</label>
    </div>

    <div class="line-container">
        <input type="checkbox" class="checkbox" id="inviteAccess" name="inviteAccess" />
        <label for="inviteAccess">Invite Access</label>
    </div>

    <div class="line-container">
        <input type="checkbox" class="checkbox" id="kickAccess" name="kickAccess" />
        <label for="kickAccess">Kick Access</label>
    </div>

    <div class="form__actions">
        <button class="primary-button">Create</button>
    </div>
</form>

@{
    if (Model.QueryResult != null)
    {
        string className = Model.QueryResult.Success ? "green-text" : "red-text";
        <div class="response-container" id="register-response">
            <h3>Response:</h3>
            <p>Success: <span class="@className">@Model.QueryResult.Success.ToString()</span></p>
            <p>Code: @Model.QueryResult.StatusCode.ToString()</p>
            <p>Message: @Model.QueryResult.Message</p>
        </div>
    }
}