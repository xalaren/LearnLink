@page
@model LearnLink.WebApi.Pages.CourseLocalRoles.CourseLocalRolesActionsPageModel
@{
    ViewData["Title"] = "Course local roles";
}

<div class="breadcrumb">
    <h2 class="breadcrumb__item" onclick="redirect('CourseLocalRoles/CourseLocalRolesActionsPage')">
        Course-Local-Roles
    </h2>
</div>

<div class="endpoints-list">

    <div class="endpoints-list__item endpoint-item endpoint-item-get" onclick="redirect('CourseLocalRoles/GetByCourseId')">
        <div class="endpoint-item__method">
            get
        </div>
        <div class="endpoint-item__name">Get local roles by Id</div>
        <i class="endpoint-item__arrow icon-arrow-right"> </i>
    </div>

    <div class="endpoints-list__item endpoint-item endpoint-item-get" onclick="redirect('CourseLocalRoles/Create')">
        <div class="endpoint-item__method">
            post
        </div>
        <div class="endpoint-item__name">Create local roles</div>
        <i class="endpoint-item__arrow icon-arrow-right"> </i>
    </div>

    <div class="endpoints-list__item endpoint-item endpoint-item-get" onclick="redirect('CourseLocalRoles/RequestUpdate')">
        <div class="endpoint-item__method">
            post
        </div>
        <div class="endpoint-item__name">Request update local role</div>
        <i class="endpoint-item__arrow icon-arrow-right"> </i>
    </div>

    <div class="endpoints-list__item endpoint-item endpoint-item-get" onclick="redirect('CourseLocalRoles/RequestDelete')">
        <div class="endpoint-item__method">
            delete
        </div>
        <div class="endpoint-item__name">Request delete local role</div>
        <i class="endpoint-item__arrow icon-arrow-right"> </i>
    </div>

</div>
