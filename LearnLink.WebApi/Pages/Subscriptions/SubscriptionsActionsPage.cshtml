@page
@model LearnLink.WebApi.Pages.Subscriptions.SubscriptionsActionsPageModel
@{
    ViewData["Title"] = "Subscriptions";
}

<div class="breadcrumb">
    <h2 class="breadcrumb__item" onclick="redirect('Subscriptions/SubscriptionsActionsPage')">
        Subscriptions
    </h2>
</div>

<div class="endpoints-list">
    <div class="endpoints-list__item endpoint-item endpoint-item-get" onclick="redirect('Subscriptions/Subscribe')">
        <div class="endpoint-item__method">
            post
        </div>
        <div class="endpoint-item__name">Subscribe</div>
        <i class="endpoint-item__arrow icon-arrow-right"> </i>
    </div>

    <div class="endpoints-list__item endpoint-item endpoint-item-get" onclick="redirect('Subscriptions/Unsubscribe')">
        <div class="endpoint-item__method">
            delete
        </div>
        <div class="endpoint-item__name">Unsubscribe</div>
        <i class="endpoint-item__arrow icon-arrow-right"> </i>
    </div>

    <div class="endpoints-list__item endpoint-item endpoint-item-get" onclick="redirect('Subscriptions/Invite')">
        <div class="endpoint-item__method">
            post
        </div>
        <div class="endpoint-item__name">Invite</div>
        <i class="endpoint-item__arrow icon-arrow-right"> </i>
    </div>

    <div class="endpoints-list__item endpoint-item endpoint-item-get" onclick="redirect('Subscriptions/Kick')">
        <div class="endpoint-item__method">
            delete
        </div>
        <div class="endpoint-item__name">Kick</div>
        <i class="endpoint-item__arrow icon-arrow-right"> </i>
    </div>
</div>
