@page
@model LearnLink.WebApi.Pages.Roles.UpdateModel
@{
}

@{
    ViewData["Title"] = "Update Role";
}

<div class="breadcrumb">
    <h2 class="breadcrumb__item" onclick="redirect('Roles/RolesPage')">
        Roles
    </h2>
    <h2 class="breadcrumb__item" onclick="redirect('Roles/Update')">
        Update
    </h2>
</div>

@{
    if (Model.QueryResult != null)
    {
        string className = Model.QueryResult.Success ? "green-text" : "red-text";
        <div class="response-container" id="register-response">
            <h3>Response:</h3>
            <p>Success: <span class="@className">@Model.QueryResult.Success.ToString()</span></p>
            <p>Code: @Model.QueryResult.StatusCode.ToString()</p>
            <p>Message: @Model.QueryResult.Message</p>
        </div>
    }
}

<form class="form" method="get">
    <div class="form-input">
        <p class="form-input__label">Role Id</p>
        <div class="line-container">
            <input type="number" name="roleId" placeholder="Role Id..." value="0" class="input" />
            <button class="primary-button">Load</button>
        </div>
    </div>

</form>

@if (Model.RoleDto != null)
{
    <form class="form adaptive-width" method="post">
        <div class="form-input">
            <p class="form-input__label">Role Id</p>
            <input type="text" name="roleId" placeholder="Role Id..." class="input" value="@Model.RoleDto.Id" />
        </div>
        <div class="form-input">
            <p class="form-input__label">Role Sign</p>
            <input type="text" name="sign" placeholder="Role Sign..." class="input" value="@Model.RoleDto.Sign" />
        </div>
        <div class="form-input">
            <p class="form-input__label">Role Name</p>
            <input type="text" name="name" placeholder="Role Name..." class="input" value="@Model.RoleDto.Name" />
        </div>
        <div class="line-container">
            <input type="checkbox" class="checkbox" id="isAdmin" name="isAdmin" checked="@Model.RoleDto.IsAdmin"/>
            <label for="isAdmin">IsAdmin</label>
        </div>

        <div class="form__actions">
            <button class="primary-button">Submit</button>
        </div>
    </form>
}
