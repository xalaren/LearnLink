@page
@model LearnLink.WebApi.Pages.Users.EditPasswordModel
@{
    ViewData["Title"] = "Edit Password";
}

<div class="breadcrumb">
    <h2 class="breadcrumb__item" onclick="redirect('Users/UsersActionsPage')">
        Users
    </h2>
    <h2 class="breadcrumb__item" onclick="redirect('Users/EditPassword')">
        EditPassword
    </h2>
</div>

@{
    if (Model.QueryResult != null)
    {
        string className = Model.QueryResult.Success ? "green-text" : "red-text";
        <div class="response-container" id="register-response">
            <h3>Response:</h3>
            <p>Success: <span class="@className">@Model.QueryResult.Success.ToString()</span></p>
            <p>Code: @Model.QueryResult.StatusCode.ToString()</p>
            <p>Message: @Model.QueryResult.Message</p>
        </div>
    }
}

<form class="form adaptive-width" method="post">
    <div class="form-input">
        <p class="form-input__label">User Id</p>
        <input type="number" name="userId" placeholder="User Id..." class="input" />
    </div>
    <div class="form-input">
        <p class="form-input__label">Old Password</p>
        <input type="text" name="oldPassword" placeholder="Old Password..." class="input" />
    </div>
    <div class="form-input">
        <p class="form-input__label">New Password</p>
        <input type="password" name="newPassword" placeholder="New Password..." class="input" />
    </div>

    <div class="form__actions">
        <button class="primary-button">Submit</button>
    </div>
</form>