@page
@model LearnLink.WebApi.Pages.Users.UserEndpointsModel

@{
    ViewData["Title"] = "Users";
}

<div class="breadcrumb">
    <h2 class="breadcrumb__item" onclick="redirect('Users/UsersPage')">
        Users
     </h2>
</div>

<div class="endpoints-list">
    <div class="endpoints-list__item endpoint-item endpoint-item-get" onclick="redirect('Users/List')">
        <div class="endpoint-item__method">
            get
        </div>
        <div class="endpoint-item__name">List</div>
        <i class="endpoint-item__arrow icon-arrow-right"> </i>
    </div>
    <div class="endpoints-list__item endpoint-item endpoint-item-get" onclick="redirect('Users/Find')">
        <div class="endpoint-item__method">
            get
        </div>
        <div class="endpoint-item__name">Find</div>
        <i class="endpoint-item__arrow icon-arrow-right"> </i>
    </div>
    <div class="endpoints-list__item endpoint-item endpoint-item-post" onclick="redirect('Users/Register')">
        <div class="endpoint-item__method">
            post
        </div>
        <div class="endpoint-item__name">Register</div>
        <i class="endpoint-item__arrow icon-arrow-right"> </i>
    </div>

    <div class="endpoints-list__item endpoint-item endpoint-item-post" onclick="redirect('Users/Login')">
        <div class="endpoint-item__method">
            post
        </div>
        <div class="endpoint-item__name">Login</div>
        <i class="endpoint-item__arrow icon-arrow-right"> </i>
    </div>

    <div class="endpoints-list__item endpoint-item endpoint-item-post" onclick="redirect('Users/Edit')">
        <div class="endpoint-item__method">
            post
        </div>
        <div class="endpoint-item__name">Edit user</div>
        <i class="endpoint-item__arrow icon-arrow-right"> </i>
    </div>

    <div class="endpoints-list__item endpoint-item endpoint-item-post" onclick="redirect('Users/EditPassword')">
        <div class="endpoint-item__method">
            post
        </div>
        <div class="endpoint-item__name">Edit password</div>
        <i class="endpoint-item__arrow icon-arrow-right"> </i>
    </div>

    <div class="endpoints-list__item endpoint-item endpoint-item-delete" onclick="redirect('Users/Delete')">
        <div class="endpoint-item__method">
            delete
        </div>
        <div class="endpoint-item__name">Delete</div>
        <i class="endpoint-item__arrow icon-arrow-right"> </i>
    </div>
</div>