@page
@model LearnLink.WebApi.Pages.Completions.CompleteLesson
@{
    ViewData["Title"] = "Complete-Lesson";
}

<div class="breadcrumb">
    <h2 class="breadcrumb__item" onclick="redirect('Completions/CompletionsActionsPage')">
        Completions
    </h2>
    <h2 class="breadcrumb__item" onclick="redirect('Completions/CompleteLesson')">
        Complete-Lesson
    </h2>
</div>

<form class="form width-400" method="post">
    <div class="form-input">
        <p class="form-input__label">User Id</p>
        <input type="number" name="userId" placeholder="User Id..." min="0" class="input" />
    </div>

    <div class="form-input">
        <p class="form-input__label">Course Id</p>
        <input type="number" name="courseId" placeholder="Course Id..." min="0" class="input" />
    </div>

    <div class="form-input">
        <p class="form-input__label">Module Id</p>
        <input type="number" name="moduleId" placeholder="Module Id..." min="0" class="input" />
    </div>

    <div class="form-input">
        <p class="form-input__label">Lesson Id</p>
        <input type="number" name="lessonId" placeholder="Lesson Id..." min="0" class="input" />
    </div>

    <div class="line-container">
        <input type="checkbox" class="checkbox" id="complete" name="complete" />
        <label for="complete">Complete?</label>
    </div>

    <div class="form__actions">
        <button class="primary-button">Save</button>
    </div>
</form>

@if (Model.QueryResult != null)
{
string className = Model.QueryResult.Success ? "green-text" : "red-text";

<div class="response-container">
    <h3>Response:</h3>
    <p>Success: <span class="@className">@Model.QueryResult.Success.ToString()</span></p>
    <p>Code: @Model.QueryResult.StatusCode.ToString()</p>
    <p>Message: @Model.QueryResult.Message</p>
</div>
}
